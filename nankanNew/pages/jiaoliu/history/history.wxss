.panel{
  width: auto;
  height:220rpx;
  border-bottom:1px solid #e2e2e3;
}
.through{
  display: flex;
}
.info_left{
  width: 30%;
  overflow: auto;
  float: left;
}

.info_right{
  width: 65%;
  margin-left: 5%;
  overflow: auto;
  float: left;
}
.info_img{
  width: 100%;
  height:130rpx;
  margin-top:30rpx;
  margin-left:20rpx;  
}
.info_title{
  width: 100%;
  height: 55rpx;
  margin-top:30rpx;
  font-size: 32rpx;
  font-weight: bold;
  font-family: "黑体";
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;  

}
.info_miaoshu{
  width: 100%;
  height:120rpx;  
  font-size:28rpx;
  line-height:40rpx; 
  overflow:hidden;
  text-overflow:ellipsis;
  color: #666666;
  margin:1% 1% 0 0;
}
.info_time{
   width: 100%;
   text-align: right;
   font-size:26rpx;
   color: #666666;
   margin:5% 2% 0 0;
}
