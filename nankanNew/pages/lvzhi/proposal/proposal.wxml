<import src="../../../src/wetoast.wxml"/>
<view class="panel">
  <view class='bt'>
    <view class='nanm'>
      <radio-group bindchange="radioCheckedChange" class="se">
        <view class="flex_box" id='1'>
          <view class="flex_item">
            <label class="{{radioCheckVal==1?'active':''}}"  bindtap="submit">提案提交
              <radio value="1" hidden="true"></radio>
            </label>
          </view>
        </view>
        <view class="flex_box" id='3'>
          <view class="flex_item">
            <label class="{{radioCheckVal==3?'active':''}}"  bindtap="handle">办理动态
              <radio value="3" hidden="true"></radio>
            </label>
          </view>
        </view>
        <view class="flex_box" id='2'>
          <view class="flex_item">
            <label class="{{radioCheckVal==2?'active':''}}"  bindtap="wodeful">精彩提案
              <radio value="2" hidden="true"></radio>
            </label>
          </view>
        </view>
      </radio-group>
    </view>
  </view>

<!--提案提交-->
<view wx:if="{{show1}}">
    <form bindsubmit="formSubmit" bindreset="formReset">
		<view class="group-body">
			<view class="input-list">
				<view class="input-item">
					<view class="input-item-content">
						<input type="text" name="title" placeholder="请输入提案名称" value='{{Title}}'></input>
					</view>
				</view>
        	<view class="input-item input-item-full">
					<textarea placeholder="请输入提案内容" maxlength="300" name="content" value='{{Content}}'></textarea>
				</view>
        </view>
        </view> 
 <view class="btn-submit">
	   <button  type="warn" formType="submit">提交</button>
	</view>
      </form>
       <template is="wetoast" data="{{...__wetoast__}}"/>
</view>

  <!--精彩提案-->
  <view wx:if="{{show2}}">
     <block wx:for="{{proposal}}" wx:key="{{code}}">
      <view class="list" wx:if="{{index % 2 == 0}}"  bindtap="proposal" id="{{item.ID}}">
        <view class="proposal-panel">
         <view class="time">{{item.Time}}</view>
         <view class="source">{{item.Source}}</view>
        </view>
        <view class="title">{{item.Title}}</view>
         <view class="image-panel"> 
          <image src='../../../images/next@3x.png' class="image-icon"></image>
        </view>
      </view>
      <view class="list bg-g" wx:else  bindtap="proposal" id="{{item.ID}}">
        <view class='proposal-panel'>
         <view class="time">{{item.Time}}</view>
         <view class="source">{{item.Source}}</view>
        </view>
        <view class="title">{{item.Title}}</view>
        <view class="image-panel">
          <image src='../../../images/next@3x.png' class="image-icon"></image>
        </view>
      </view>
    </block>
  </view>

  <!--办理动态-->
  <view wx:if="{{show3}}">
     <block wx:for="{{handle}}" wx:key="{{code}}">
      <view class="list" wx:if="{{index % 2 == 0}}"  bindtap="handleDetail" id="{{item.ID}}" data-name="{{item.Source}}">
        <view class="proposal-panel">
         <view class="time">{{item.Time}}</view>
         <view class="source">{{item.Source}}</view>
         <view class="comment">评论总数:{{item.Views}}</view>
        </view>
        <view class="title">{{item.Title}}</view>
         <view class="image-panel"> 
          <image src='../../../images/next@3x.png' class="image-icon"></image>
        </view>
      </view>
      <view class="list bg-g" wx:else  bindtap="handleDetail" id="{{item.ID}}" data-name="{{item.Source}}">
        <view class='proposal-panel'>
         <view class="time">{{item.Time}}</view>
         <view class="source">{{item.Source}}</view>
         <view class="comment">评论总数:{{item.Views}}</view>
        </view>
        <view class="title">{{item.Title}}</view>
        <view class="image-panel">
          <image src='../../../images/next@3x.png' class="image-icon"></image>
        </view>
      </view>
    </block>
        <template is="wetoast" data="{{...__wetoast__}}"/> 
  </view> 

</view>